{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@downstream/core": ["../core/src"],
      "@downstream/cli/*": ["../cli/src/*"],
      "*": ["../node_modules/*"]
    },
  }
}
